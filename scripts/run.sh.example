#!/bin/bash

# Edit this example file to suit your needs

VENV_DIRECTORY=/path/to/venv/dir
DEPLOYMENT_DIRECTORY=/path/to/deployment/dir/eInk-weather-display

. ${VENV_DIRECTORY}/bin/activate
cd ${DEPLOYMENT_DIRECTORY}

# Sudo needed to access Bluetooth and BCM2835
